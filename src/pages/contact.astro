---
import Layout from "../layouts/Layout.astro";
import { site } from "../data/site";
---

<Layout
  title="Contact"
  description="Get a free estimate for your custom stair project. Contact Southeastern Stair Company for professional installation and finishing in the Southeastern US."
>
  <section
    class="py-12 md:py-20 bg-brand-light"
    aria-labelledby="contact-title"
  >
    <div class="container mx-auto px-4 text-center">
      <h1
        id="contact-title"
        class="text-3xl sm:text-4xl md:text-5xl uppercase mb-6 font-bold leading-tight"
      >
        Contact
      </h1>
      <p
        class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed"
      >
        Ready to elevate your home? Contact us today for a free consultation and
        luxury staircase estimate.
      </p>
    </div>
  </section>

  <section class="py-12 md:py-20">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-10 md:gap-16">
        <!-- Contact Form -->
        <div
          class="bg-white p-6 md:p-10 rounded-lg shadow-xl border border-gray-100 order-2 md:order-1"
        >
          <h2
            class="text-xl md:text-2xl uppercase mb-6 md:mb-8 font-bold text-brand-dark"
          >
            Send Us A Message
          </h2>
          <form
            class="space-y-4 md:space-y-6"
            action="https://api.web3forms.com/submit"
            method="POST"
          >
            <!-- Web3Forms Configuration -->
            <input
              type="hidden"
              name="access_key"
              value="cd51994f-cf6b-426e-84a5-d401a8ac7876"
            />
            <input
              type="hidden"
              name="subject"
              value="New Contact Form Submission - Southeastern Stair Company"
            />
            <input
              type="hidden"
              name="from_name"
              value="Southeastern Stair Website"
            />
            <input
              type="hidden"
              name="redirect"
              value={new URL("/thank-you", site.baseUrl).href}
            />
            <input
              type="checkbox"
              name="botcheck"
              class="hidden"
              style="display: none;"
            />

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6">
              <div class="space-y-2">
                <label
                  for="name"
                  class="text-xs md:text-sm font-bold uppercase tracking-wider text-gray-700"
                  >Full Name</label
                >
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-3 border border-gray-200 focus:border-brand-primary outline-none transition-colors rounded"
                  required
                />
              </div>
              <div class="space-y-2">
                <label
                  for="phone"
                  class="text-xs md:text-sm font-bold uppercase tracking-wider text-gray-700"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-200 focus:border-brand-primary outline-none transition-colors rounded"
                  required
                />
              </div>
            </div>
            <div class="space-y-2">
              <label
                for="email"
                class="text-xs md:text-sm font-bold uppercase tracking-wider text-gray-700"
                >Email Address</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 border border-gray-200 focus:border-brand-primary outline-none transition-colors rounded"
                required
              />
            </div>
            <div class="space-y-2">
              <label
                for="description"
                class="text-xs md:text-sm font-bold uppercase tracking-wider text-gray-700"
                >Project Details</label
              >
              <textarea
                id="description"
                name="description"
                rows="5"
                class="w-full px-4 py-3 border border-gray-200 focus:border-brand-primary outline-none transition-colors rounded"
                placeholder="Tell us about your custom staircase project, material preferences, and timeline..."
                required></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-brand-secondary text-white font-bold py-4 uppercase tracking-widest hover:bg-brand-primary transition-colors focus:ring-2 focus:ring-brand-primary focus:outline-none shadow-lg cursor-pointer rounded"
            >
              Request My Estimate
            </button>
          </form>
        </div>

        <script is:inline>
          // Client-side script to handle pre-filling form from URL parameters
          // This ensures compatibility with static site generation (SSG)
          function prefillAndFocusForm() {
            const params = new URLSearchParams(window.location.search);
            const fields = ["name", "email", "phone"];
            let anyPrefilled = false;

            fields.forEach((field) => {
              const value = params.get(field);
              if (value) {
                const input = document.getElementById(field);
                if (input) {
                  input.value = value;
                  anyPrefilled = true;
                }
              }
            });

            // Handle focusing the next logical field
            const descriptionField = document.getElementById("description");
            const nameField = document.getElementById("name");

            // Use a small timeout to ensure the browser has finished rendering
            setTimeout(() => {
              if (anyPrefilled && descriptionField) {
                descriptionField.focus();
              } else if (nameField) {
                nameField.focus();
              }
            }, 100);
          }

          // Run immediately since it's placed after the form
          prefillAndFocusForm();

          // Also handle back/forward cache
          window.addEventListener("pageshow", (event) => {
            if (event.persisted) {
              prefillAndFocusForm();
            }
          });
        </script>

        <!-- Contact Info -->
        <div class="space-y-10 md:space-y-12 order-1 md:order-2">
          <div>
            <h2
              class="text-xl md:text-2xl uppercase mb-6 text-brand-dark font-bold"
            >
              Contact Information
            </h2>
            <div class="space-y-6 md:space-y-8">
              <div class="flex items-start space-x-4">
                <div class="bg-brand-light p-3 rounded shrink-0">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 md:h-6 md:w-6 text-brand-secondary"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3
                    class="text-sm md:text-base font-bold uppercase tracking-wider text-brand-dark"
                  >
                    Office Location
                  </h3>
                  <p class="text-gray-600 leading-relaxed text-sm md:text-base">
                    {site.contact.address.street}<br />
                    {site.contact.address.city}, {site.contact.address.region}{
                      " "
                    }
                    {site.contact.address.postalCode}
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="bg-brand-light p-3 rounded shrink-0">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 md:h-6 md:w-6 text-brand-secondary"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3
                    class="text-sm md:text-base font-bold uppercase tracking-wider text-brand-dark"
                  >
                    Serving Area
                  </h3>
                  <p class="text-gray-600 leading-relaxed text-sm md:text-base">
                    Based in the Southeast.<br />
                    Available for projects Nationwide.
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="bg-brand-light p-3 rounded shrink-0">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 md:h-6 md:w-6 text-brand-secondary"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3
                    class="text-sm md:text-base font-bold uppercase tracking-wider text-brand-dark"
                  >
                    Phone
                  </h3>
                  <p class="text-gray-600 text-sm md:text-base">
                    {site.contact.phoneDisplay}
                  </p>
                </div>
              </div>
              <div class="flex items-start space-x-4">
                <div class="bg-brand-light p-3 rounded shrink-0">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 md:h-6 md:w-6 text-brand-secondary"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3
                    class="text-sm md:text-base font-bold uppercase tracking-wider text-brand-dark"
                  >
                    Email
                  </h3>
                  <p class="text-gray-600 text-sm md:text-base break-all">
                    {site.contact.email}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 p-6 md:p-8 rounded-lg border border-gray-100">
            <h3
              class="font-bold uppercase tracking-wider text-brand-dark mb-4 text-sm md:text-base"
            >
              Availability
            </h3>
            <p class="text-gray-600 text-xs md:text-sm leading-relaxed mb-4">
              Our specialists are available for consultations Monday through
              Friday, 8:00 AM - 5:00 PM. We recommend reaching out early for
              custom project scheduling.
            </p>
            <p
              class="text-gray-600 text-[10px] md:text-xs font-bold uppercase tracking-widest"
            >
              Georgia • Alabama • Carolinas • Tennessee
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
