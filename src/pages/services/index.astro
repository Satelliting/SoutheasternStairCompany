---
import Layout from "../../layouts/Layout.astro";
import { services } from "../../data/site";
import { withBase } from "../../utils/withBase";
---

<Layout
  title="Our Services"
  description="Explore our range of professional stair services: custom design, quality craftsmanship, expert installation, remodeling, and commercial solutions."
>
  <section class="py-12 md:py-20 bg-brand-light">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-3xl md:text-5xl uppercase mb-6 font-bold leading-tight">
        Our Services
      </h1>
      <p
        class="text-base md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed"
      >
        Explore our range of professional stair services: custom design, quality
        craftsmanship, expert installation, and remodeling.
      </p>
    </div>
  </section>

  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4">
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12"
      >
        {
          services.map((service) => (
            <div class="group bg-white p-8 rounded-lg shadow-md border border-gray-100 hover:shadow-xl transition-all duration-300 flex flex-col items-center text-center">
              <div class="mb-6 p-4 bg-brand-light rounded-full text-brand-secondary group-hover:bg-brand-primary group-hover:text-white transition-colors">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d={service.icon}
                  />
                </svg>
              </div>
              <h2 class="text-xl md:text-2xl font-bold uppercase mb-4 text-brand-dark">
                {service.title}
              </h2>
              <p class="text-gray-600 text-sm md:text-base mb-8 leading-relaxed">
                {service.description}
              </p>
              <a
                href={withBase(`/services/${service.slug}`)}
                class="mt-auto inline-flex items-center text-sm font-bold uppercase tracking-widest text-brand-secondary hover:text-brand-primary transition-colors"
              >
                Learn More
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-4 w-4 ml-2 group-hover:translate-x-1 transition-transform"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20 bg-brand-secondary text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl uppercase mb-8 font-bold">
        Need a Custom Solution?
      </h2>
      <p class="text-xl mb-10 opacity-90 max-w-2xl mx-auto">
        Every staircase we build is a unique piece of functional art. Contact us
        today to discuss your specific requirements.
      </p>
      <a
        href={withBase("/contact")}
        class="inline-block bg-white text-brand-secondary px-10 py-4 uppercase tracking-widest font-bold hover:bg-brand-light transition-colors"
      >
        Get A Free Estimate
      </a>
    </div>
  </section>
</Layout>
